<div class="container m-3">
    <div class="row">
        <div class="col-4">
            <%= @user.profile_picture.attached? ? image_tag(@user.profile_picture,size:50,class:"rounded-circle"):gravatar_for(@user,size:50) %>
            <%= @user.email %>
        </div>
        <div class="col-6">
            <%if @user.microposts.any?%>
            <%= render @microposts%>
            <%end%>
        </div>
    </div>
</div>