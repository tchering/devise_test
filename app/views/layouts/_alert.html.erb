<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= bootstrap_class_for_flash(message_type) %> alert-dismissible fade show" role="alert" data-mdb-alert-init>
    <%= message %>
    <button type="button" class="btn-close" data-mdb-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>